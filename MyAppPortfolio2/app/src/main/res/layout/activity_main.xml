<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pham.ultimatefit.myappportfolio2.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:onClick="openAppOnClick"
        android:text="@string/my_nanodegree_apps"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:textColor="@color/colorPrimaryText"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/popular_movies"
        android:id="@+id/button_popular_movies"
        android:onClick="openAppOnClick"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:theme="@style/AppTheme"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/stock_hawk"
        android:id="@+id/button_stock_hawk"
        android:onClick="openAppOnClick"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.1"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:id="@+id/button_build_it"
        android:onClick="openAppOnClick"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:layout_weight="0.1"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/make_your_app_material"
        android:layout_weight="0.1"
        android:id="@+id/button_make_material_app"
        android:onClick="openAppOnClick"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/go_ubiquitous"
        android:id="@+id/button_go_ubiquitous"
        android:onClick="openAppOnClick"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:id="@+id/button_capstone"
        android:onClick="openAppOnClick"
        android:layout_weight="0.1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"/>
</LinearLayout>
